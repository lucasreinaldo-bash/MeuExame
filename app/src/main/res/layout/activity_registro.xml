<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f3"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imghexagon"
                    android:layout_width="140dp"
                    android:layout_height="212dp"
                    android:layout_gravity="right"
                    app:srcCompat="@drawable/hexagone1" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="120dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/hexagone2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="626dp"
                    android:layout_marginLeft="3dp"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:text="REGISTRAR"
                        android:textColor="#283DA5"
                        android:textSize="31.3sp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="52.7dp"
                        android:text="Nome da Regulacao"
                        android:textColor="#213397"
                        android:textSize="13.3sp" />

                    <EditText
                        android:id="@+id/nome_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="18dp"
                        android:background="@android:color/transparent"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textColor="#111010"
                        android:textColorHint="#FFFFFF"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="263.7dp"
                        android:layout_height="1dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="6.3dp"
                        android:background="#f2f2f3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="37.3dp"
                        android:text="Nome da Responsável Técnica"
                        android:textColor="#213397"
                        android:textSize="13.3sp" />

                    <EditText
                        android:id="@+id/responsavel_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="18dp"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColorHint="#FFFFFF"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="263.7dp"
                        android:layout_height="1dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="6.3dp"
                        android:background="#f2f2f3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="37.3dp"
                        android:text="E-mail"
                        android:textColor="#213397"
                        android:textSize="13.3sp" />

                    <EditText
                        android:id="@+id/email_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="18dp"
                        android:background="@android:color/transparent"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textColorHint="#FFFFFF"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="263.7dp"
                        android:layout_height="1dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="6.3dp"
                        android:background="#f2f2f3" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="37.3dp"
                        android:text="Senha"
                        android:textColor="#213397"
                        android:textSize="13.3sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:orientation="horizontal">


                        <!-- <customfonts.EditText_Poppins_Semi_Bold
                             android:id="@+id/edtpass"
                             android:layout_width="0dp"
                             android:layout_weight="1"
                             android:layout_height="wrap_content"
                             android:textSize="15sp"
                             android:textColorHint="#ffffff"
                             android:maxLength="10"
                             android:textCursorDrawable="@drawable/white_cursor_color"
                             android:maxLines="1"
                             android:textColor="#FFFFFF"
                             android:inputType="textPassword"
                             android:background="@android:color/transparent"
                             />-->

                        <EditText
                            android:id="@+id/senha_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:inputType="numberPassword"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:textColor="#1D1A1A"
                            android:textColorHint="#ffffff"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="263.7dp"
                        android:layout_height="1dp"
                        android:layout_gravity="left"
                        android:layout_marginTop="6.3dp"
                        android:background="#f2f2f3" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">



                            <FrameLayout
                                android:layout_width="40.7dp"
                                android:layout_height="45.3dp"
                                android:layout_gravity="bottom|right"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="27.3dp"
                                android:layout_marginBottom="43.7dp"
                                android:background="@drawable/white_hexagone">

                                <Button
                                    android:id="@+id/btn_registrar"
                                    android:layout_width="18.7dp"
                                    android:layout_height="15.3dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/right_arrow" />


                            </FrameLayout>
                        </LinearLayout>
                    </ScrollView>


                </LinearLayout>




            </FrameLayout>





        </LinearLayout>

    </ScrollView>
</LinearLayout>